@model Piggyzen.Web.Features.Category.Create.Model

<h2>Create Category</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Category Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ParentCategoryId" class="form-label">Parent Category</label>
        <select asp-for="ParentCategoryId" class="form-select" asp-items="Model.Categories">
            <option value="">-- None --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>