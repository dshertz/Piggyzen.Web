@model Piggyzen.Web.Features.Category.Index.Result

<h2>Categories</h2>

<!-- Knapp fÃ¶r att skapa ny kategori -->
<form asp-controller="Category" asp-action="Create" method="get" class="mb-3">
    <button type="submit" class="btn btn-primary">Create New Category</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Parent Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.ParentCategoryName</td>
                <td>
                    <a asp-area="Categories" asp-controller="Category" asp-action="Details" asp-route-id="@category.Id"
                        class="btn btn-info btn-sm">Details</a>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                        class="btn btn-warning btn-sm">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                        class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Visar feedback -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}