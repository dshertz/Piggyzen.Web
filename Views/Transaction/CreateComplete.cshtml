@model Piggyzen.Web.Features.Transaction.CreateComplete.Model

<h2>Create Transaction</h2>
<div class="btn-group mb-3" role="group">
    <a asp-controller="Transaction" asp-action="CreatePartial" class="btn btn-secondary">Create Partial</a>
    <a asp-controller="Transaction" asp-action="CreateComplete" class="btn btn-primary">Create Complete</a>
</div>
<form asp-controller="Transaction" asp-action="CreateComplete" method="post">
    <div class="form-group">
        <label asp-for="Command.BookingDate">Booking Date</label>
        <input asp-for="Command.BookingDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Command.TransactionDate">Transaction Date</label>
        <input asp-for="Command.TransactionDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Command.Description">Description</label>
        <input asp-for="Command.Description" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Command.Amount">Amount</label>
        <input asp-for="Command.Amount" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="Command.Balance">Balance</label>
        <input asp-for="Command.Balance" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="Command.CategoryId">Category</label>
        <select asp-for="Command.CategoryId" asp-items="Model.Categories" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create Complete Transaction</button>
</form>