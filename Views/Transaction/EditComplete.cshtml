@model Piggyzen.Web.Features.Transaction.EditComplete.Model

<h2>Edit Complete Transaction</h2>
<form asp-action="EditCompleteConfirmed" asp-controller="Transaction" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"></select>
    </div>

    <div class="form-group">
        <label for="memo">Memo</label>
        <textarea id="memo" name="Memo" class="form-control">@Model.Memo</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update Complete</button>
    <a asp-action="Index" asp-controller="Transaction" class="btn btn-secondary">Cancel</a>
</form>